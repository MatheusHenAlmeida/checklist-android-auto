<resources>

    <style name="Theme.ChecklistAuto" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="ButtonAddList" parent="Theme.ChecklistAuto">
        <item name="android:background">@drawable/oval_button_background</item>
        <item name="android:layout_width">@dimen/bt_big_size</item>
        <item name="android:layout_height">@dimen/bt_big_size</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ButtonBackToLists" parent="Theme.ChecklistAuto">
        <item name="android:background">@drawable/oval_button_background</item>
        <item name="android:layout_width">@dimen/bt_big_size</item>
        <item name="android:layout_height">@dimen/bt_big_size</item>
        <item name="android:backgroundTint">@android:color/holo_red_dark</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ButtonMicrophone" parent="Theme.ChecklistAuto">
        <item name="android:background">@drawable/oval_button_background</item>
        <item name="android:layout_width">@dimen/bt_small_size</item>
        <item name="android:layout_height">@dimen/bt_small_size</item>
        <item name="android:backgroundTint">@android:color/darker_gray</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ButtonAddNewElement" parent="Theme.ChecklistAuto">
        <item name="android:background">@drawable/ic_button_add_new</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonCancel" parent="Theme.ChecklistAuto">
        <item name="android:background">@drawable/ic_button_cancel</item>
        <item name="android:textColor">@color/app_background_color</item>
    </style>
</resources>